{{#this}}
<div class="box{{#if item.modifier}} box--{{item.modifier}}{{/if}}">
	{{#if content.title}}
	<div class="box__head"><span class="box__title">{{content.title}}</span></div>
	{{/if}}
	<div class="box__body rte">{{content.body}}</div>
	{{#if actions}}
	<div class="box__foot">
		{{#each actions}}
			{{#if buttons}}
				{{#each buttons}}
					{{#this}}
					{{> button }}
					{{/this}}
				{{/each }}
			{{/if}}
		{{/each }}
	</div>
	{{/if}}
</div>
{{/this}}