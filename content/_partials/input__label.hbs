{{#this}}
	{{#if content.text}}
		{{#if attribute.for}}
			<label
				{{#if attribute.for}}for="{{attribute.for}}"{{/if}}
				class="input__label{{#if attribute.modifier}} input__label--{{attribute.modifier}}{{/if}}
				{{#if attribute.disabled}} disabled{{/if}}">
				{{#if content.icon}}{{#each content.icon}}{{#this}}{{>icon}}{{/this}}{{/each}}{{/if}}
				<span{{#if attribute.hidden}} class="hidden-text"{{/if}}>{{{content.text}}}</span>
			</label>
		{{else}}
			<div class="input__label{{#if attribute.modifier}} input__label--{{attribute.modifier}}{{/if}}">
				{{#if content.icon}}{{#each content.icon}}{{#this}}{{>icon}}{{/this}}{{/each}}{{/if}}
				<span{{#if attribute.hidden}} class="hidden-text"{{/if}}>{{{content.text}}}</span>
			</div>
		{{/if}}
	{{/if}}
{{/this}}