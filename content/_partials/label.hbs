{{#this}}
	{{#if item.for}}
		<label
		    for="{{item.for}}"
		    class="label{{#if item.modifier}} label--{{item.modifier}}{{/if}}">
		    <span>{{{content.text}}}</span>
		</label>
	{{else}}
		<span class="label{{#if item.modifier}} label--{{item.modifier}}{{/if}}{{#if item.status}} {{item.status}}{{/if}}">{{{content.text}}}</span>
	{{/if}}
{{/this}}