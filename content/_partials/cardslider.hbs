{{#this}}
<div class="cardslider{{#if item.modifier}} cardslider--{{item.modifier}}{{/if}}">
	{{#each content.cards}}
	<div class="card">
		<div class="card__front">
			<div class="card__content">
				<div class="card__title">{{content.title}}</div>
				<div class="card__body"><p>{{content.body}}</p></div>
			</div>
		</div>
	</div>
	{{/each}}
</div>

<a href="#" class="cardslider__control" data-cardslidercontrol="previous">Previous</a>
<a href="#" class="cardslider__control" data-cardslidercontrol="1">1</a>
<a href="#" class="cardslider__control" data-cardslidercontrol="2">2</a>
<a href="#" class="cardslider__control" data-cardslidercontrol="3">3</a>
<a href="#" class="cardslider__control" data-cardslidercontrol="4">4</a>
<a href="#" class="cardslider__control" data-cardslidercontrol="5">5</a>
<a href="#" class="cardslider__control" data-cardslidercontrol="6">6</a>
<a href="#" class="cardslider__control" data-cardslidercontrol="next">Next</a>

{{/this}}