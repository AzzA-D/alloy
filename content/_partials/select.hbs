{{#this}}
<select
    class="select{{#if item.modifier}} select--{{item.modifier}}{{/if}}"
    {{#if item.multiple}} multiple="multiple"{{/if}}
    {{#if item.required}} required="required"{{/if}}
    {{#if item.disabled}} disabled="disabled"{{/if}}
    {{#if content.id}} id="{{content.id}}"{{/if}}
    {{#if content.form}} form="{{content.form}}"{{/if}}
    {{#if content.name}} name="{{content.name}}"{{/if}}
    {{#if content.size}} size="{{content.size}}"{{/if}}
    {{#if content.autocomplete}} autocomplete="{{content.autocomplete}}"{{/if}}
    {{#if content.tabindex}} tabindex="{{content.tabindex}}"{{/if}}
    {{#if content.accesskey}} accesskey="{{content.accesskey}}"{{/if}}
>

{{#if item.select__optgroup}}
    <optgroup label="">

        {{#if select__option}}
        {{/if}}

    </optgroup>
{{/if}}


{{#if item.select__option}}

        {{#if select__option}}
        {{/if}}

{{/if}}


</select>
{{/this}}
