{{#this}}

    {{#if content.labels}}
        {{#each content.labels}}
            {{#this}}
                {{> input__label }}
            {{/this}}
        {{/each}}
    {{/if}}

<select
    class="input__field input__field--select"
    {{#if item.multiple}} multiple="multiple"{{/if}}
    {{#if item.required}} required="required" aria-required="true"{{/if}}
    {{#if item.disabled}} disabled="disabled" aria-disabled="true"{{/if}}
    {{#if item.id}} id="{{item.id}}"{{/if}}
    {{#if item.form}} form="{{item.form}}"{{/if}}
    {{#if item.name}} name="{{item.name}}"{{/if}}
    {{#if item.size}} size="{{item.size}}"{{/if}}
    {{#if item.tabindex}} tabindex="{{item.tabindex}}"{{/if}}
    {{#if item.accesskey}} accesskey="{{item.accesskey}}"{{/if}}
>

    {{#if content.optgroups}}
        {{#each content.optgroups}}
                {{#this}}
                {{> select__optgroup}}
                {{/this}}
        {{/each}}

    {{else}}

        {{#if content.options}}
            {{#each content.options}}
                    {{#this}}
                    {{> select__option}}
                    {{/this}}
            {{/each}}
        {{/if}}

    {{/if}}

</select>
{{/this}}
