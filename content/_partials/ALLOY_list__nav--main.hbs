<ul class="mainnav mainnav--main">
	{{#if navigation-main}}
	    {{#withSort navigation-main "data.navigation-order"}}
	    	{{#each this.pages}}
		        {{#if data.navigation-main }}
		            {{#this}}
		            	<li class="mainnav__item"><a class="mainnav__link{{#if page.nav-variant}} mainnav__link--{{data.nav-variant}}{{/if}}{{#is ../../../../page.dest this.dest}} current{{/is}}" href="{{relative ../../../../page.dest this.dest}}" title="{{data.nav-title}}"{{#if data.nav-target}} target="{{data.nav-target}}"{{/if}}>{{capitalizeFirst data.nav-text}}</a></li>
		            {{/this}}
		        {{/if}}
	        {{/each}}
	    {{/withSort}}
    {{/if}}
</ul>