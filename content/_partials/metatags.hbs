<meta name="description" content="{{ page.description }}" />
<meta name="keywords" content="{{ page.title }}, {{ page.keywords }}, {{ app.keywords }} " />
<meta name="author" content="{{ app.author }}" />
<meta itemprop="url" content="{{ app.url }}" />
<meta itemprop="name" content="{{ app.name }}" />
{{#if app.addr }}
<meta name="geography" content="{{ app.address }}" />
{{/if}}
{{#if app.lang }}
<meta name="language" content="{{ app.lang }}" />
{{/if}}
<meta http-equiv="expires" content="never" />
<meta name="copyright" content="{{ app.author }}" />
{{#if app.designer }}
<meta name="designer" content="{{ app.designer }}" />
{{else}}
<meta name="designer" content="{{ app.author }}" />
{{/if}}
{{#if app.publisher }}
<meta name="publisher" content="{{ app.publisher }}" />
{{else}}
<meta name="publisher" content="{{ app.author }}" />
{{/if}}
<meta name="revisit-after" content="7 days" />
<meta name="distribution" content="Global" />
<meta name="robots" content="index, follow" />
{{#if app.city }}
<meta name="city" content="{{ app.city }}" />
{{/if}}
{{#if app.country }}
<meta name="country" content="{{ app.country }}" />
{{/if}}
{{#if app.gvarification }}
<meta name="google-site-verification" content="{{ app.gvarification }}" />
{{/if}}
{{#if app.msvarification }}
<meta name="msvalidate.01" content="{{ app.msvarification }}" />
{{/if}}
<meta name="uptime-verification" content="uptime-robot" />