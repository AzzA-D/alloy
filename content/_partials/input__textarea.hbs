{{#this}}
    <textarea
        type="text"
        role="textbox"
        aria-multiline="true"
        class="input
            {{#if item.modifier}} input--{{item.modifier}}{{/if}}
            {{#if item.size}} {{item.size}}{{/if}}"
        {{#if item.required}} required="required" aria-required="true"{{/if}}
        {{#if item.readonly}} readonly="readonly" aria-readonly="true"{{/if}}
        {{#if item.disabled}} disabled="disabled" aria-disabled="true"{{/if}}
        {{#if content.id}} id="{{content.id}}"{{/if}}
        {{#if content.name}} name="{{content.name}}"{{/if}}
        {{#if content.placeholder}} placeholder="{{content.placeholder}}"{{/if}}
        {{#if content.value}} value="{{content.value}}"{{/if}}
        {{#if content.tabindex}} tabindex="{{content.tabindex}}"{{/if}}
        {{#if content.accesskey}} accesskey="{{content.accesskey}}"{{/if}} />
        {{content.text}}
    </textarea>
{{/this}}