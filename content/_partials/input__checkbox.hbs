{{#this}}
    <span class="form__input{{#if item.modifier}} form__input--{{item.modifier}}{{/if}}{{#if item.size}} {{item.size}}{{/if}}{{#if item.status}} {{item.status}}{{/if}}">
    <input
        type="checkbox"
        class="input input--checkbox"
        {{#if item.checked}} checked="checked" aria-checked="true"{{/if}}
        {{#if item.required}} required="required" aria-required="true"{{/if}}
        {{#if item.disabled}} disabled="disabled" aria-disabled="true"{{/if}}
        {{#if item.id}} id="{{item.id}}"{{/if}}
        {{#if item.name}} name="{{item.name}}"{{/if}}
        {{#if item.value}} value="{{item.value}}"{{/if}}
        {{#if item.tabindex}} tabindex="{{item.tabindex}}"{{/if}}
        {{#if item.accesskey}} accesskey="{{item.accesskey}}"{{/if}}
    />
    </span>
{{/this}}
