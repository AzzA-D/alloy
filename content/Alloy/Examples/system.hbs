<header class="w w--head">
	<div class="g">
	    <div class="c__lg--3-4">
	    	<h1 class="page__title">{{title}}</h1>
	    </div>
		<div class="c__lg--1-4">
			[TOOLS]
		</div>
	</div>
</header>

<nav class="w w--nav">
	<div class="g">
	    <div class="c__lg--1">
	    	[SITE MAINNAV]
	    </div>
	</div>
</nav>

<main class="main">
	<div class="w w--headlines">
		<div class="g g--rtl">
		    <div class="c__lg--13-16 c__md--4-5">
				{{> alert alert }}
				{{> panel panel }}
		    </div>
		    <div class="c__lg--3-16 c__md--4-5">
		    [SIDEBAR]
		    </div>
		</div>
	</div>
</main>

<footer class="w w--foot">
	<div class="g">
	    <div class="c__lg--1">
			{{> footer }} {{! footer uses the app.json for its information at present }}
			[SITELINK]
	    </div>
	</div>
</footer>
