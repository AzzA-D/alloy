---
title: Alloy Index
subtitle: This is where the fun starts!

nav-variant: "home"
nav-title: "Go to the Home"
nav-text: "Home"
mainmenu: "true"
---

<main class="w w--main">
	<div class="g">
		<div class="c__md--1">

			<div class="page page--{{nav-variant}}">
				<div class="page__head">
					<h1 class="page__title">{{title}}</h1>
					<h2 class="page__subtitle">{{subtitle}}</h2>
				</div>

				<div class="page__body rte">
					{{#if pages}}
						<ul>
						{{#withSort pages}}
		                    {{#if data.nav-title }}
		                        <li><a class="list__link list__link--{{data.nav-variant}}" href="{{relative ../../page.dest this.dest}}" title="{{data.nav-title}}"><span>{{capitalizeFirst data.nav-text}}</span></a></li>
	                        {{/if}}
		                {{/withSort}}
		                </ul>
	                {{/if}}
				</div>
			</div>

		</div>
	</div>
</main>